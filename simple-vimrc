"             88
              ""
"
"   8b       d8 88 88,dPYba,,adPYba,  8b,dPPYba,  ,adPPYba,
"   `8b     d8' 88 88P'   '88'    '8a 88P'   'Y8 a8'     ''
"    `8b   d8'  88 88      88      88 88         8b
" 888 `8b,d8'   88 88      88      88 88         "8a,   ,aa
" 888   '8'     88 88      88      88 88          `"Ybbd8"'


" vi and vim aren't compatible
set nocompatible

" helps plugins loading
set filetype=off

" encoding
set encoding=utf-8

" enable syntax
syntax on

" tabs and indentation
set tabstop=4 shiftwidth=4

" search words by typing when in normal mode: /word
set incsearch

" command-line completition menu (usage: tab)
set wildmenu

" path means a list of directories in which vim will search (:h path for more informations)
" open file by typing :find filename (directory name not needed)
set path+=**

" numbers
set nu relativenumber

" scrolloff
set scrolloff=7

" splits at the bottom and right (:vsp for right split)
set splitbelow splitright

" set mapleader key
let mapleader = " "

" use tab for switching between buffers
set switchbuf=usetab

call plug#begin('~/.vim/autoload/')
" colorschemes
Plug 'joshdick/onedark.vim'
Plug 'dracula/vim'
Plug 'vim-scripts/xoria256.vim'
Plug 'morhetz/gruvbox'

" plugins for autocompletition
Plug 'honza/vim-snippets'
Plug 'raimondi/delimitmate'

" autoformatting
Plug 'dense-analysis/ale'

call plug#end()

" use terminal background (R=14,G=14,B=22)
autocmd ColorScheme * highlight! Normal ctermbg=NONE guibg=NONE

" return to last edit position when opening files (You want this!)
autocmd BufReadPost *
     \ if line("'\"") > 0 && line("'\"") <= line("$") |
     \   exe "normal! g`\"" |
     \ endif

" disable automatic commenting on newline
autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions-=o

" automatically deletes all trailing whitespaces on save
autocmd BufWritePre * %s/\s\+$//e

" select colorscheme
colorscheme gruvbox

" disable arrowkeys (when in normal mode, use hjkl to move)
nnoremap <Down> <Nop>
nnoremap <Left> <Nop>
nnoremap <Right> <Nop>
nnoremap <Up> <Nop>

" shortcuts for spilt navigation (CTRL+hjkl)
map <C-h> <C-w>h
map <C-l> <C-w>l
map <C-j> <C-w>j
map <C-k> <C-w>k

" spelling check
map <leader>- :setlocal spell! spelllang=en_us<CR>

" copy and paste from others porgrams (CTRL+c,CTRL+v)
vnoremap <C-c> "*y :let @+=@*<CR>
vnoremap <C-v> "*p :let @+=@*<CR>

" open the .vimrc from other files
map <leader>v :find ~/.vimrc<CR>
map <leader>b :find ~/.bashrc<CR>

" terminal
map <leader>t :below vertical terminal<CR>

" file browsing
let g:netrw_altv          = 1
let g:netrw_browse_split  = 4
let g:netrw_liststyle     = 3
let g:netrw_list_hide     = netrw_gitignore#Hide()
let g:netrw_special_syntax= 1
let g:netrw_banner        = 0
